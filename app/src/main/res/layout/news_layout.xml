<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton
                android:onClick="switchToMainActivity"
                android:contentDescription="@string/goBackString"
                android:layout_width="90dp"
                android:layout_height="81dp" app:srcCompat="@drawable/icon_back" android:id="@+id/backButton2"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <TextView android:layout_width="238dp" android:layout_height="match_parent"
                  android:text="@string/newsTitleBarText" android:gravity="center"
                  android:textSize="30sp"  />
    </LinearLayout>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/listNews"/>
</LinearLayout>